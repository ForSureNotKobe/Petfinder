@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container mx-auto px-4 h-full">
    <div class="flex content-center items-center justify-center h-full">
        <div class="w-full lg:w-4/12 px-4">
            <div class="relative flex flex-col min-w-0 break-words w-full mb-6 shadow-lg rounded-lg bg-gray-300 border-0">
                <div class="flex-auto px-4 lg:px-10 py-10 pt-0">
                    <section>
                        <form id="account" method="post">
                            <div class="text-center mb-3">
                                <h6 class="text-blueGray-500 text-sm font-bold">Log in with Email</h6>
                            </div>
                            <hr />
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="relative w-full mb-3">
                                <label asp-for="Input.Email" class="block uppercase text-gray-700 text-xs font-bold mb-2" for="grid-password"></label>
                                <input asp-for="Input.Email" class="border-0 px-3 py-3 placeholder-gray-400 text-gray-700 bg-white rounded text-sm shadow focus:outline-none focus:ring w-full" placeholder="Email" style="transition: all 0.15s ease 0s;" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="relative w-full mb-3">
                                <label asp-for="Input.Password" class="block uppercase text-gray-700 text-xs font-bold mb-2" for="grid-password"></label>
                                <input asp-for="Input.Password" class="border-0 px-3 py-3 placeholder-gray-400 text-gray-700 bg-white rounded text-sm shadow focus:outline-none focus:ring w-full" placeholder="Password" style="transition: all 0.15s ease 0s;" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="relative w-full mb-3">
                                <div class="checkbox">
                                    <label asp-for="Input.RememberMe">
                                        <input asp-for="Input.RememberMe" />
                                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                                    </label>
                                </div>
                            </div>
                            <div class="relative w-full mb-3">
                                <button type="submit" class="bg-gray-900 text-white active:bg-gray-700 text-sm font-bold uppercase px-6 py-3 rounded shadow hover:shadow-lg outline-none focus:outline-none mr-1 mb-1 w-full">Log in</button>
                            </div>
                            <div class="relative w-full mb-3">
                                <p>
                                    <a class="relative w-full mb-3" id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                                </p>
                                <p>
                                    <a class="relative w-full mb-3" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                                </p>
                            </div>
                        </form>
                    </section>
                </div>
