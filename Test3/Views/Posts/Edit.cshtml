@model Petfinder.Models.Post

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PostId" />
            <div class="relative w-full mb-3">
                <label asp-for="Type" class="block uppercase text-blueGray-600 text-xs font-bold mb-2" for="grid-password"></label>
                <input asp-for="Type" class="border-0 px-3 py-3 placeholder-blueGray-300 text-blueGray-600 bg-white rounded text-sm shadow focus:outline-none focus:ring w-full ease-linear transition-all duration-150" placeholder="Name" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="relative w-full mb-3">
                <label asp-for="Title" class="block uppercase text-blueGray-600 text-xs font-bold mb-2" for="grid-password"></label>
                <input asp-for="Title" class="border-0 px-3 py-3 placeholder-blueGray-300 text-blueGray-600 bg-white rounded text-sm shadow focus:outline-none focus:ring w-full ease-linear transition-all duration-150" placeholder="Name" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="relative w-full mb-3">
                <label asp-for="Description" class="block uppercase text-blueGray-600 text-xs font-bold mb-2" for="grid-password"></label>
                <input asp-for="Description" class="border-0 px-3 py-3 placeholder-blueGray-300 text-blueGray-600 bg-white rounded text-sm shadow focus:outline-none focus:ring w-full ease-linear transition-all duration-150" placeholder="Name" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="relative w-full mb-3">
                <label asp-for="PhotoUrl" class="block uppercase text-blueGray-600 text-xs font-bold mb-2" for="grid-password"></label>
                <input asp-for="PhotoUrl" class="border-0 px-3 py-3 placeholder-blueGray-300 text-blueGray-600 bg-white rounded text-sm shadow focus:outline-none focus:ring w-full ease-linear transition-all duration-150" placeholder="Name" />
                <span asp-validation-for="PhotoUrl" class="text-danger"></span>
            </div>
            <div class="relative w-full mb-3">
                <label asp-for="UserId" class="block uppercase text-blueGray-600 text-xs font-bold mb-2" for="grid-password"></label>
                <input asp-for="UserId" class="border-0 px-3 py-3 placeholder-blueGray-300 text-blueGray-600 bg-white rounded text-sm shadow focus:outline-none focus:ring w-full ease-linear transition-all duration-150" placeholder="Name" />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="relative w-full mb-3">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
