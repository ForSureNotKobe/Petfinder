@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


<div class="container mx-auto px-4 h-full">
    <div class="flex content-center items-center justify-center h-full">
        <div class="w-full lg:w-4/12 px-4">
            <div class="relative flex flex-col min-w-0 break-words w-full mb-6 shadow-lg rounded-lg bg-gray-300 border-0">
                <div class="rounded-t mb-0 px-6 py-6">
                    <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div class="text-center mb-3">
                            <h6 class="text-blueGray-500 text-sm font-bold">Create a new account</h6>
                        </div>
                        <hr class="mt-6 border-b-1 border-blueGray-300" />
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="relative w-full mb-3">
                            <label asp-for="Input.Email" class="block uppercase text-blueGray-600 text-xs font-bold mb-2" for="grid-password"></label>
                            <input asp-for="Input.Email" class="border-0 px-3 py-3 placeholder-blueGray-300 text-blueGray-600 bg-white rounded text-sm shadow focus:outline-none focus:ring w-full ease-linear transition-all duration-150" placeholder="Email" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="relative w-full mb-3">
                            <label asp-for="Input.Password" class="block uppercase text-blueGray-600 text-xs font-bold mb-2" for="grid-password"></label>
                            <input asp-for="Input.Password" class="border-0 px-3 py-3 placeholder-blueGray-300 text-blueGray-600 bg-white rounded text-sm shadow focus:outline-none focus:ring w-full ease-linear transition-all duration-150" placeholder="Password" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="relative w-full mb-3">
                            <label asp-for="Input.ConfirmPassword" class="block uppercase text-blueGray-600 text-xs font-bold mb-2" for="grid-password"></label>
                            <input asp-for="Input.ConfirmPassword" class="border-0 px-3 py-3 placeholder-blueGray-300 text-blueGray-600 bg-white rounded text-sm shadow focus:outline-none focus:ring w-full ease-linear transition-all duration-150" placeholder="Password" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <button type="submit" class="bg-gray-900 text-white active:bg-gray-700 text-sm font-bold uppercase px-6 py-3 rounded shadow hover:shadow-lg outline-none focus:outline-none mr-1 mb-1 w-full">Register</button>
                    </form>
                </div>
