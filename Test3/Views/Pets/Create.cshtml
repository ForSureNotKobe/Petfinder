@model Petfinder.Models.Pet


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>
<hr />
<div class="container mx-auto px-4 h-full">
    <div class="flex content-center items-center justify-center h-full">
        <div class="w-full lg:w-4/12 px-4">
            <div class="relative flex flex-col min-w-0 break-words w-full mb-6 shadow-lg rounded-lg bg-gray-300 border-0">
                <div class="rounded-t mb-0 px-6 py-6">
                    <div class="text-center mb-3">
                        <h6 class="text-blueGray-500 text-sm font-bold">Create a new Pet</h6>
                    </div>
                    <hr class="mt-6 border-b-1 border-blueGray-300" />
                </div>
                <div class="flex-auto px-4 lg:px-10 py-10 pt-0">
                    <div class="row">
                        <div class="col-md-4">
                            <form asp-action="Create">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>                                
                                <div class="relative w-full mb-3">
                                    <label asp-for="Name" class="block uppercase text-blueGray-600 text-xs font-bold mb-2" for="grid-password">Name</label>
                                    <input asp-for="Name" class="border-0 px-3 py-3 placeholder-blueGray-300 text-blueGray-600 bg-white rounded text-sm shadow focus:outline-none focus:ring w-full ease-linear transition-all duration-150" placeholder="Name" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class="relative w-full mb-3">
                                    <label asp-for="Age" class="block uppercase text-blueGray-600 text-xs font-bold mb-2" for="grid-password">Age</label>
                                    <input asp-for="Age" class="border-0 px-3 py-3 placeholder-blueGray-300 text-blueGray-600 bg-white rounded text-sm shadow focus:outline-none focus:ring w-full ease-linear transition-all duration-150" placeholder="Age" />
                                    <span asp-validation-for="Age" class="text-danger"></span>
                                </div>
                                <div class="relative w-full mb-3">
                                    <label asp-for="Sex" class="block uppercase text-blueGray-600 text-xs font-bold mb-2" for="grid-password">Sex</label>
                                    @*<input asp-for="Sex" class="border-0 px-3 py-3 placeholder-blueGray-300 text-blueGray-600 bg-white rounded text-sm shadow focus:outline-none focus:ring w-full ease-linear transition-all duration-150" placeholder="Sex" />*@
                                    <select asp-for="Sex" class="border-0 px-3 py-3 placeholder-blueGray-300 text-blueGray-600 bg-white rounded text-sm shadow focus:outline-none focus:ring w-full ease-linear transition-all duration-150">
                                        <option value = 0>Male</option>
                                        <option value = 1>Female</option>
                                    </select>
                                    <span asp-validation-for="Sex" class="text-danger"></span>
                                </div>
                                <div class="relative w-full mb-3">
                                    <label asp-for="Origins" class="block uppercase text-blueGray-600 text-xs font-bold mb-2" for="grid-password">Origins</label>
                                    <select asp-for="Origins" class="border-0 px-3 py-3 placeholder-blueGray-300 text-blueGray-600 bg-white rounded text-sm shadow focus:outline-none focus:ring w-full ease-linear transition-all duration-150">
                                        <option value=0>Born in Shelter</option>
                                        <option value=1>Found</option>
                                        <option value=2>Given away</option>
                                    </select>                                    <span asp-validation-for="Origins" class="text-danger"></span>
                                </div>
                                <div class="relative w-full mb-3">
                                    <label asp-for="BreedType" class="block uppercase text-blueGray-600 text-xs font-bold mb-2" for="grid-password">Type</label>
                                    <select asp-for="BreedType" class="border-0 px-3 py-3 placeholder-blueGray-300 text-blueGray-600 bg-white rounded text-sm shadow focus:outline-none focus:ring w-full ease-linear transition-all duration-150">
                                        <option value=0>Dog</option>
                                        <option value=1>Cat</option>
                                        <option value=2>Other</option>
                                    </select>                                               <span asp-validation-for="BreedType" class="text-danger"></span>
                                </div>
                                <div class="relative w-full mb-3">
                                    <label asp-for="Description" class="block uppercase text-blueGray-600 text-xs font-bold mb-2" for="grid-password">Description</label>
                                    <input asp-for="Description" class="border-0 px-3 py-3 placeholder-blueGray-300 text-blueGray-600 bg-white rounded text-sm shadow focus:outline-none focus:ring w-full ease-linear transition-all duration-150" placeholder="Description" />
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                                <div class="relative w-full mb-3">
                                    <label asp-for="Size" class="block uppercase text-blueGray-600 text-xs font-bold mb-2" for="grid-password">Size</label>
                                    <select asp-for="Size" class="border-0 px-3 py-3 placeholder-blueGray-300 text-blueGray-600 bg-white rounded text-sm shadow focus:outline-none focus:ring w-full ease-linear transition-all duration-150">
                                        <option value=0>Small</option>
                                        <option value=1>Average</option>
                                        <option value=2>Big</option>
                                    </select>                                               <span asp-validation-for="Size" class="text-danger"></span>
                                </div>
                                <div class="relative w-full mb-3">
                                    <label asp-for="Difficulty" class="block uppercase text-blueGray-600 text-xs font-bold mb-2" for="grid-password">Difficulty</label>
                                    <select asp-for="Difficulty" class="border-0 px-3 py-3 placeholder-blueGray-300 text-blueGray-600 bg-white rounded text-sm shadow focus:outline-none focus:ring w-full ease-linear transition-all duration-150">
                                        <option value=0>Easy</option>
                                        <option value=1>Moderate</option>
                                        <option value=2>Hard</option>
                                    </select>                                               <span asp-validation-for="Difficulty" class="text-danger"></span>
                                </div>
                                <div class="relative w-full mb-3">
                                    <label asp-for="ShelterId" class="block uppercase text-blueGray-600 text-xs font-bold mb-2" for="grid-password">ShelterId</label>
                                    <select asp-for="ShelterId" class="border-0 px-3 py-3 placeholder-blueGray-300 text-blueGray-600 bg-white rounded text-sm shadow focus:outline-none focus:ring w-full ease-linear transition-all duration-150" placeholder="ShelterId" asp-items="ViewBag.ShelterId"></select>
                                </div>
                                <div class="relative w-full mb-3">
                                    <label asp-for="PhotoUrl" class="block uppercase text-blueGray-600 text-xs font-bold mb-2" for="grid-password">PhotoUrl</label>
                                    <input asp-for="PhotoUrl" class="border-0 px-3 py-3 placeholder-blueGray-300 text-blueGray-600 bg-white rounded text-sm shadow focus:outline-none focus:ring w-full ease-linear transition-all duration-150" placeholder="PhotoUrl" />
                                    <span asp-validation-for="PhotoUrl" class="text-danger"></span>
                                </div>
                                <div class="relative w-full mb-3">
                                    <input type="submit" value="Create" class="bg-gray-900 text-white active:bg-gray-700 text-sm font-bold uppercase px-6 py-3 rounded shadow hover:shadow-lg outline-none focus:outline-none mr-1 mb-1 w-full"
                                           type="button"
                                           style="transition: all 0.15s ease 0s;" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
